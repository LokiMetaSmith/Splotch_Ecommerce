# Server Configuration
PORT=3000
BASE_URL="http://localhost:5173"
NODE_ENV="development"
# Path to the LowDB JSON database file. Defaults to server/db.json if not set.
DB_PATH="server/db.json"

# Square Credentials
SQUARE_ACCESS_TOKEN="YOUR_SANDBOX_ACCESS_TOKEN"
SQUARE_LOCATION_ID="YOUR_SANDBOX_LOCATION_ID"

# Google OAuth Credentials
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"
# The refresh token is obtained after the admin authenticates for the first time.
# It will be stored in db.json, but you can also store it here for backup.
GMAIL_REFRESH_TOKEN=""

# Admin Configuration
ADMIN_EMAIL="your-admin-email@example.com"

# WebAuthn Configuration
RP_ID="localhost"
EXPECTED_ORIGIN="http://localhost:5173"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHANNEL_ID="YOUR_TELEGRAM_CHANNEL_ID"

# Security and Session Management
SESSION_SECRET="your-super-secret-session-key"
CSRF_SECRET="your-super-secret-csrf-key"
JWT_SECRET="a-32-byte-secret-key-for-db-encryption"
ENCRYPT_CLIENT_JSON="false"

# JWT Asymmetric Keys (Optional - will be generated if not provided)
# Copy the entire file content, including headers/footers, and replace \n with \\n
JWT_PRIVATE_KEY=""
JWT_PUBLIC_KEY=""
