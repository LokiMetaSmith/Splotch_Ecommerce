# Staging Environment Variables
# Copy this file to .env and fill in the values.

# --- Server Configuration ---
PORT=3000
BASE_URL="http://localhost:8080"
NODE_ENV=staging

# --- Square Credentials (use Sandbox values) ---
SQUARE_ACCESS_TOKEN=""
SQUARE_LOCATION_ID=""

# --- Google OAuth Credentials ---
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --- SendGrid API Key ---
SENDGRID_API_KEY=""

# --- Admin Configuration ---
ADMIN_EMAIL=""

# --- WebAuthn (Security Key) Configuration ---
RP_ID="localhost"
EXPECTED_ORIGIN="http://localhost:8080"

# --- JWT Asymmetric Keys ---
# Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
# Then format as a single line with \n for newlines.
JWT_PRIVATE_KEY=""
JWT_PUBLIC_KEY=""

# --- DB Encryption Key ---
# A 32-character string
JWT_SECRET=""

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHANNEL_ID=""

# --- CSRF & Session Secrets ---
CSRF_SECRET=""
SESSION_SECRET=""

# --- Database Path ---
# This should point to the sanitized staging database
DB_PATH="db.staging.json"

# --- Database Encryption ---
ENCRYPT_CLIENT_JSON="false"
